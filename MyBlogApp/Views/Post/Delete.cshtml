@model Post 

@{
    ViewData["Title"] = "Delete Post";
}

<h2>@ViewData["Title"]</h2>
<h4>Do you want to delete this post?</h4>

<form asp-action="DeleteConfirm" asp-controller="Post">
    <input asp-for="@Model.Id" hidden />
    <button type="submit" class="btn btn-danger mt-2">Delete</button>
    <a class="btn btn-secondary mt-2" asp-action="Index" asp-controller="Post">Cancel</a>
</form>